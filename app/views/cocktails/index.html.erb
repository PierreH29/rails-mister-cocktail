<div class="container">
  <h1>All Cocktails</h1>

  <%= link_to 'Add a cocktail', new_cocktail_path %>

  <% @cocktails.each do |cocktail| %>
    <h2>
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </h2>

  <%= link_to "See details", cocktail_path(cocktail), class: "btn btn-primary"%>
  <% end %>
</div>
